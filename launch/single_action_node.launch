<launch>
  <arg name="robot_id" default="0"/>
  <group ns="robot_$(arg robot_id)">
    <node pkg="multirobot_stage" type="action_node" name="action_node" output="screen">
      <param name="robot_map_topic" value="map"/>
      <param name="robot_id" value="$(arg robot_id)"/>
      <param name="root_namespace" value="robot"/>
      <param name="merged_map_topic" value="map"/>
      <param name="odom_topic" value="odom"/>
      <param name="action_topic" value="map_goal"/>
      <param name="status_topic" value="move_base/status"/>
    </node>
  </group>
</launch>
